@{

    ViewData["Title"] = "Categorias";
}
@model IEnumerable<SuperStore.MVC.ViewModels.Categories.CategoryViewModel>;

<h3>Categorias</h3>
<div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">
        @foreach (var category in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id">@category.Name</a>
                <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger" role="button">Deletar</a>
            </li>
        }
        <li class="list-group-item">
            <a asp-area="" asp-controller="Categories" asp-action="Create">Criar nova categoria</a>
        </li>
    </ul>
</div>