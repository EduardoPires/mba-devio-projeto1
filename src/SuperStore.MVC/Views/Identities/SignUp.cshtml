@{
    ViewData["Title"] = "Registrar";
}

<div class="form-signin w-50 m-auto">
    <form>
        <h1 class="h3 mb-3 fw-normal">Preencha seus dados abaixo:</h1>

        <div class="form-floating">
            <input type="text" class="form-control" id="usernameInput" placeholder="usuário">
            <label for="usernameInput">Nome de usuário</label>
        </div>
        <div class="form-floating">
            <input type="email" class="form-control" id="emailInput" placeholder="nome@exemplo.com">
            <label for="emailInput">Endereço de e-mail</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Senha">
            <label for="floatingPassword">Senha</label>
        </div>

        <button class="btn btn-primary w-50 py-2" type="submit">Registrar</button>
    </form>
</div>