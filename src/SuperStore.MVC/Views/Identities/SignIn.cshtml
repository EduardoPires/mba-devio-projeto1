@{
    ViewData["Title"] = "Entrar";
}

<div class="form-signin w-50 m-auto">
    <form>
        <h1 class="h3 mb-3 fw-normal">Entre com suas credenciais:</h1>

        <div class="form-floating">
            <input type="email" class="form-control" id="emailInput" placeholder="nome@exemplo.com">
            <label for="emailInput">Endereço de e-mail</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="passwordInput" placeholder="Senha">
            <label for="passwordInput">Senha</label>
        </div>

        <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Lembrar de mim
            </label>
        </div>
        <button class="btn btn-primary w-50 py-2" type="submit">Entrar</button>
    </form>
</div>